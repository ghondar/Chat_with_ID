extends layout
block head
	script(src="//code.jquery.com/jquery-2.1.1.min.js")
	script(src="//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js")
	link(rel="stylesheet", type="text/css", href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css")
	link(rel="stylesheet", type="text/css", href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap-theme.min.css")
	link(rel="stylesheet", type="text/css", href="css/estilo.css")
block content
	div(class='row')
		div(id="formModal", class="modal")
			div(class="modal-dialog")
				div(class="modal-content")
					div(class="modal-header")
						h2(class="title-modal")
					div(class="modal-body")
						p(class="formModal")
					div(class="modal-footer")
		div(id="title", class="well")
			div(id="todo", class="container")
				div(id="cabecera", class="page-header")
					h1
						| NodeJS Chat
						small 
							| Developed by 
						a(href="http://www.facebook.com/ghondar")
							| Ghondar
		div(id="containerMessages", class="col-md-9")
			div(class="panel panel-primary head")
				div(class="panel-heading")
					p(class="nombres")
						| Mensajes de la Sala
				div(id="cajita")
					div(id="chatMsgs")
		div(id="containerUsers", class="col-md-3")
			div(class="panel panel-primary head")
				div(class="panel-heading")
					p(class="nombres")
						| Usuarios
			div(id="chatUsers")
		div(id="escribirMensaje", class="col-md-9")
			form(id="sendMsg", class="input-group", style="text-align: center; margin: auto; width: 95%")
				input(id="containerSendMessages", class="form-control input-lg message", type="text")
				span(class="input-group-btn")
					button(class="btn btn-lg btn-primary", type="submit")
						| Send
		div(class="col-md-3")
	script(src="/socket.io/socket.io.js")
	script(type="text/javascript", src="js/config.js")
		
	
	
	
